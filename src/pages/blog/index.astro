---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Nav from '../../components/Nav.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
---
<BaseLayout title="Blog | Brian Does Everything">
  <Nav />
  <div class="max-w-4xl mx-auto px-6 pt-32 pb-20">
    <p class="text-accent uppercase tracking-[0.2em] text-sm font-semibold mb-4">Blog</p>
    <h1 class="text-5xl md:text-6xl font-black mb-12">All Posts</h1>
    <div class="space-y-8">
      {posts.map((post) => (
        <a href={`/blog/${post.id}`} class="group flex flex-col md:flex-row gap-6 bg-card border border-white/5 rounded-xl overflow-hidden hover:border-accent/40 transition-all duration-300 p-6">
          {post.data.image && (
            <img src={post.data.image} alt={post.data.title} class="w-full md:w-48 h-32 object-cover rounded-lg" />
          )}
          <div>
            <p class="text-accent text-xs uppercase tracking-widest font-semibold">{new Date(post.data.pubDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</p>
            <h2 class="text-2xl font-bold mt-1 mb-2 group-hover:text-accent transition">{post.data.title}</h2>
            <p class="text-gray-400">{post.data.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
  <Footer />
</BaseLayout>
