---
import BaseLayout from './BaseLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout title={`${frontmatter.title} | Brian Does Everything`} description={frontmatter.description}>
  <Nav />
  <article class="max-w-3xl mx-auto px-6 pt-32 pb-20">
    <a href="/blog" class="text-accent hover:text-orange-400 text-sm uppercase tracking-wider mb-8 inline-block">&larr; Back to Blog</a>
    <p class="text-accent text-sm uppercase tracking-wider mb-4">{new Date(frontmatter.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
    {frontmatter.image && <img src={frontmatter.image} alt={frontmatter.title} class="w-full rounded-xl mb-10 aspect-video object-cover" />}
    <div class="prose">
      <slot />
    </div>
  </article>
  <Footer />
</BaseLayout>
